<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%- title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=9; IE=8;" />
    <%- include css-common %>

    <%- include opengraph %>
  </head>
  <body>
  <!-- Facebook JavaScript -->
  <div id="fb-root"></div>

  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : <%- appID %>, // Set YOUR APP ID
        status     : true, // check login status
        //cookie     : true, // enable cookies to allow the server to access the session
        frictionlessRequests : true,
        xfbml      : true  // parse XFBML
      });
  </script>

  <!-- Main menu page -->
  <div class="container">
    <div class="span12">
      <img src="images/logos/bang.on_128x128.png">
    </div>
    <h3>Thank you for signing up to bang.on</h3>
    <p>Help us help you</p>
    <p><a id="invitefriends_button" href="#" class="btn btn-primary btn-large">Invite your friends &raquo;</a></p>

  </div>
  <script>
    // Load the SDK asynchronously
    (function(d){
      var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement('script'); js.id = id; js.async = true;
      js.src = "//connect.facebook.net/en_US/all.js";
      ref.parentNode.insertBefore(js, ref);
    }(document));
  </script>
  <%- include js-common %>
  <script src="bootstrap-switch/js/bootstrap-switch.min.js"></script>
  <script src="bootstrap-multiselect/js/bootstrap-multiselect.js"></script>
  <script src="js/main.js"></script>

  <script>

      $(document).ready(function() {
      });

      $('#invitefriends_button').on('click', function(e) {
        FB.ui({method: 'apprequests',
        message: 'Join me in bang.on',
        })
      })

  </script>

  </body>
</html>
